{
  "name": "yalps",
  "version": "0.4.2",
  "description": "Yet another linear programming solver. (A rewrite of javascript-lp-solver.) Aims to be decently fast.",
  "homepage": "https://github.com/Ivordir/YALPS",
  "files": [
    "build"
  ],
  "main": "build/main/index.js",
  "module": "build/module/index.js",
  "exports": {
    "import": "./build/module/index.js",
    "require": "./build/main/index.js",
    "default": "./build/module/index.js"
  },
  "types": "build/types/index.d.ts",
  "sideEffects": false,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/Ivordir/YALPS.git"
  },
  "bugs": {
    "url": "https://github.com/Ivordir/YALPS/issues"
  },
  "license": "MIT",
  "author": {
    "name": "Ivordir",
    "email": "ivordir@pm.me"
  },
  "keywords": [
    "Linear Programming",
    "Integer Programming",
    "Mixed Integer Linear Programming",
    "LP",
    "ILP",
    "MILP",
    "Solver",
    "Linear Optimization"
  ],
  "scripts": {
    "benchmark": "TS_NODE_PROJECT=benchmarks/tsconfig.json node --expose-gc --loader ts-node/esm benchmarks/run.ts",
    "inspect": "node --inspect-brk --expose-gc --loader ts-node/esm",
    "inspect:benchmark": "TS_NODE_PROJECT=benchmarks/tsconfig.json pnpm inspect benchmarks/run.ts",
    "test": "c8 ava",
    "watch": "tsc -w",
    "lint": "eslint .",
    "format": "prettier --write .",
    "build:esm": "tsc",
    "build:cjs": "tsc -m commonjs --outDir build/main",
    "build": "pnpm build:esm && pnpm build:cjs",
    "prepare": "pnpm build"
  },
  "ava": {
    "files": [
      "tests/**",
      "!tests/helpers/**",
      "!tests/cases/**"
    ],
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader=ts-node/esm"
    ],
    "timeout": "30s"
  },
  "c8": {
    "checkCoverage": true,
    "lines": 95,
    "include": "src/**"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "tsconfig.eslint.json"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "ignorePatterns": [
      "build/**"
    ],
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking",
      "plugin:@typescript-eslint/strict",
      "standard-with-typescript",
      "prettier"
    ],
    "rules": {
      "no-var": "error",
      "object-shorthand": "error",
      "no-constant-binary-expression": "error",
      "no-constructor-return": "error",
      "init-declarations": "error",
      "no-new-native-nonconstructor": "error",
      "no-implicit-coercion": "error",
      "no-multi-assign": "error",
      "no-param-reassign": "error",
      "no-useless-concat": "error",
      "prefer-arrow-callback": "error",
      "prefer-destructuring": "error",
      "prefer-object-spread": "error",
      "prefer-template": "error",
      "yoda": [
        "error",
        "never",
        {
          "exceptRange": true
        }
      ],
      "@typescript-eslint/array-type": [
        "error",
        {
          "default": "array"
        }
      ],
      "@typescript-eslint/consistent-type-definitions": [
        "error",
        "type"
      ],
      "@typescript-eslint/consistent-type-imports": "off",
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/no-non-null-assertion": "off",
      "@typescript-eslint/no-require-imports": "error",
      "@typescript-eslint/prefer-for-of": "off",
      "@typescript-eslint/no-useless-empty-export": "error",
      "@typescript-eslint/default-param-last": "error"
    }
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "trailingComma": "none",
    "arrowParens": "avoid"
  },
  "dependencies": {
    "heap": "^0.2.7"
  },
  "devDependencies": {
    "@types/heap": "^0.2.31",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "ava": "^5.2.0",
    "c8": "^7.13.0",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "glpk.js": "^4.0.1",
    "javascript-lp-solver": "^0.4.24",
    "prettier": "^2.8.7",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
