{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "tsc: watch",
      "type": "typescript",
      "tsconfig": "tsconfig.json",
      "option": "watch",
      "problemMatcher": [
        "$tsc-watch"
      ],
      "group": "build"
    },
    {
      "label": "tsc: build",
      "type": "typescript",
      "tsconfig": "tsconfig.json",
      "problemMatcher": [
        "$tsc"
      ],
      "group": "build"
    },
    {
      "label": "node: inspect",
      "type": "shell",
      "isBackground": true,
      "command": "pnpm",
      "args": [
        "inspect",
        "${relativeFile}"
      ],
      "problemMatcher": {
        "background": {
          "activeOnStart": true,
          "beginsPattern": "node .*",
          "endsPattern": "Debugger listening on .*"
        },
        "pattern": {
          "regexp": ".*Command failed.*"
        }
      }
    },
    {
      "label": "node: inspect benchmarks",
      "type": "shell",
      "isBackground": true,
      "command": "pnpm",
      "args": [
        "inspect:benchmark"
      ],
      "problemMatcher": {
        "background": {
          "activeOnStart": true,
          "beginsPattern": "node .*",
          "endsPattern": "Debugger listening on .*"
        },
        "pattern": {
          "regexp": ".*Command failed.*"
        }
      }
    }
  ]
}
