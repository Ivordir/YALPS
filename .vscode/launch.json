  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug/Run TS",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "ts-node",
      "runtimeArgs": [
        "${relativeFile}"
      ],
      "args": [],
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "name": "Test via Mocha",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": [
        "test"
      ],
      "args": [],
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ]
}
