  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug/Run TS",
      "type": "node",
      "request": "launch",
      "outputCapture": "std",
      "args": [
        "--import=tsimp",
        "${relativeFile}"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ],
    },
    {
      "name": "Test via AVA",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/ava/entrypoints/cli.mjs",
      "outputCapture": "std",
      "args": [
        "--serial",
        "${relativeFile}"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ]
}
